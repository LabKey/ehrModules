<customView xmlns="http://labkey.org/data/xml/queryCustomView">
    <columns>
        <column name="employeeId"/>
        <column name="employeeId/lastName">
            <properties>
                <property name="columnTitle" value="Last Name"/>
            </properties>
        </column>
        <column name="employeeId/firstName">
            <properties>
                <property name="columnTitle" value="First Name"/>
            </properties>
        </column>
        <column name="employeeId/unit">
            <properties>
                <property name="columnTitle" value="Unit"/>
            </properties>
        </column>
        <column name="requirementName"/>
        <column name="requirementName/type">
            <properties>
                <property name="columnTitle" value="Requirement Type"/>
            </properties>
        </column>        
        <column name="ExpirePeriod"/>
        <column name="MostRecentDate"/>
        <column name="MonthsUntilRenewal"/>
    </columns>
    <sorts>
        <sort column="employeeId/lastName" descending="false"/>
        <sort column="employeeId/firstName" descending="false"/>
        <sort column="requirementName/type" descending="false"/>
        <sort column="requirementName" descending="false"/>
    </sorts>
</customView>