<customView xmlns="http://labkey.org/data/xml/queryCustomView">
    <columns>
        <column name="Id"/>
        <column name="Id/curLocation/room">
            <properties>
                <property name="columnTitle" value="Current Room"/>
            </properties>
        </column>
        <column name="Id/curLocation/cage">
            <properties>
                <property name="columnTitle" value="Current Cage"/>
            </properties>
        </column>
        <column name="problem_no"/>
        <column name="date"/>
        <column name="date_resolved"/>
        <column name="Remark"/>
        <column name="code"/>
    </columns>
    <filters>
        <filter column="date_resolved" operator="isblank"/>
    </filters>
    <sorts>
        <sort column="date" descending="true"/>
    </sorts>
</customView>