<customView xmlns="http://labkey.org/data/xml/queryCustomView">
    <columns>
        <column name="Id"/>
        <column name="date" />
        <column name="weight" />
        <column name="Id/DataSet/Demographics/weight">
            <properties>
                <property name="columnTitle" value="Current Weight"/>
            </properties>
        </column>
        <column name="relChange/PctChange">
            <properties>
                <property name="columnTitle" value="Percent Change"/>
            </properties>
        </column>
        <column name="relChange/IntervalInMonths">
            <properties>
                <property name="columnTitle" value="Interval (Months)"/>
            </properties>
        </column>
        <column name="remark" />
   </columns>
   <sorts>
       <sort column="date" descending="true"/>
   </sorts>
    <filters>
        <filter column="qcstate/publicdata" operator="eq" value="true"/>
    </filters>
</customView>