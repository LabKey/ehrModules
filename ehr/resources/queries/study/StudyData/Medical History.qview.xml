<customView xmlns="http://labkey.org/data/xml/queryCustomView">
   <columns>
       <column name="id"/>
       <column name="Date"/>
       <column name="project"/>
       <column name="dataset/label">
            <properties>
                <property name="columnTitle" value="Dataset"/>
            </properties>
       </column>
       <column name="remark"/>
       <column name="description"/>
   </columns>
   <sorts>
       <sort column="date" descending="true"/>
   </sorts>
   <filters>
       <filter column="dataset/name" operator="in" value="behavetrem;biopsy;blood;clinremarks;drug;necropsy;problem;surgeries;tb;weight;bacteriologyRuns;parasitologyRuns;virologyRuns;chemistryRuns;hematologyRuns;urinalysisRuns;immunologyRuns"/>
       <filter column="qcstate/publicdata" operator="eq" value="true"/>
   </filters>
</customView>