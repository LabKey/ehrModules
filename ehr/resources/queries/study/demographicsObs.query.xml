<query xmlns="http://labkey.org/data/xml/query">
    <metadata>
        <tables xmlns="http://labkey.org/data/xml">
            <table tableName="demographicsObs" tableDbType="NOT_IN_DB">
                <columns>
                    <column columnName="Id">
                        <isKeyField>true</isKeyField>
                        <isHidden>true</isHidden>
                    </column>
                    <column columnName="yesterdaysObs">
                        <columnTitle>Yesterday's Obs</columnTitle>
                        <inputType>textarea</inputType>
                        <url>/ehr/executeQuery.view?schemaName=study&amp;
                            query.queryName=irregularObs&amp;
                            query.Id~eq=${Id}
                            query.date~dateeq=${yesterday}
                        </url>
                    </column>
                    <column columnName="yesterday">
                        <isHidden>true</isHidden>
                    </column>
                </columns>
            <titleColumn>yesterdaysObs</titleColumn>
            </table>
        </tables>
    </metadata>
</query>
