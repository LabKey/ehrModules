<customView xmlns="http://labkey.org/data/xml/queryCustomView">
   <columns>
       <column name="protocol"/>
       <column name="inves"/>
       <column name="approve"/>
       <column name="totalProjects/TotalProjects">
           <properties>
               <property name="columnTitle" value="Total Projects"/>
           </properties>
       </column>
       <column name="totalAnimals/TotalAnimals">
           <properties>
               <property name="columnTitle" value="Total Animals"/>
           </properties>
       </column>
   </columns>
   <filters>
       <filter column="totalAnimals/totalAnimals" operator="gt" value="0"/>
   </filters>
   <sorts>
       <sort column="protocol" descending="true"/>
   </sorts>
</customView>