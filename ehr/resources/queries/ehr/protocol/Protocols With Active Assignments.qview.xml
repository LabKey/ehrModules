<customView xmlns="http://labkey.org/data/xml/queryCustomView">
   <columns>
       <column name="protocol"/>
       <column name="inves"/>
       <column name="approve"/>
       <column name="maxAnimals"/>
       <column name="pdf"/>
       <column name="totalProjects/TotalProjects">
           <properties>
               <property name="columnTitle" value="Total Projects"/>
           </properties>
       </column>
       <column name="activeAnimals/TotalActiveAnimals">
           <properties>
               <property name="columnTitle" value="#Animals Actively Assigned"/>
           </properties>
       </column>
   </columns>
   <filters>
       <filter column="activeAnimals/TotalActiveAnimals" operator="gt" value="0"/>
   </filters>
   <sorts>
       <sort column="protocol" />
   </sorts>
</customView>