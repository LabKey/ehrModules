<query xmlns="http://labkey.org/data/xml/query">
    <metadata>
        <tables xmlns="http://labkey.org/data/xml">
            <table tableName="TasksByLocation" tableDbType="NOT_IN_DB">
                <tableUrl>/ehr/taskDetails.view?formtype=${formtype}&amp;taskid=${taskid}</tableUrl>
                <updateUrl>/ehr/manageTask.view?formtype=${formtype}&amp;taskid=${taskid}</updateUrl>
                <insertUrl>/ehr/manageTask.view</insertUrl>
                <!--<titleColumn>RowId</titleColumn>-->
                <columns>
                    <column columnName="taskid">
                        <columnTitle>Task Id</columnTitle>
                        <!--<isHidden>true</isHidden>-->
                        <fk>
                            <fkFolderPath>/wnprc/ehr/</fkFolderPath>
                            <fkDbSchema>ehr</fkDbSchema>
                            <fkTable>tasks</fkTable>
                            <fkColumnName>taskid</fkColumnName>
                        </fk>
                        <url>/ehr/manageTask.view?formtype=${formtype}&amp;taskid=${taskid}</url>
                    </column>
                    <column columnName="formtype">
                        <isHidden>true</isHidden>
                    </column>
                </columns>
                <buttonBarOptions includeStandardButtons="true">
                    <item text="Create New">
                        <target>/ehr/manageTask.view</target>
                    </item>
                </buttonBarOptions>
            </table>
        </tables>
    </metadata>
</query>
